@{
    ViewData["Title"] = "Student Registration";
}


<div class="row justify-content-center">
    <div class="col-md-12">

        <div class="card mb-4">
            <div class="card-header centerme pb-0">
                <h6 class="m-auto">Student Registration</h6>
            </div>
            <div class="card-body px-3 pt-0 pb-2">
                <div class="row justify-content-center">

                    <div class="col-md-4">
                        <div class="inputBox my-3">
                            <input type="text" required="required">
                            <span>First Name</span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="inputBox my-3">
                            <input type="text" required="required">
                            <span>Last Name</span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <label>Date of Birth</label>
                        <input type="date" class="form-control">
                    </div>

                    <div class="col-md-4">
                        <label class="label">Gender</label>

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="Male">
                            <label class="form-check-label" for="Male">
                                Male
                            </label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="Female">
                            <label class="form-check-label" for="Female">
                                Female
                            </label>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="inputBox my-3">
                            <input type="text" required="required">
                            <span>Phone Number</span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="inputBox my-3">
                            <input type="text" required="required">
                            <span>Email</span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="inputBox my-3">
                            <input type="text" required="required">
                            <span>Address</span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <select class="form-control">
                            <option value="-1">-- Select City --</option>
                            <option>Lahore</option>
                            <option>Islamabad</option>
                            <option>Karachi</option>
                            <option>Multan</option>
                            <option>Dera Ismail Khan</option>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <select class="form-control">
                            <option value="-1">-- Select State --</option>
                            <option>Punjab</option>
                            <option>KPK</option>
                            <option>Sindh</option>
                            <option>Blochistan</option>
                        </select>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>